{
  "name": "monoman",
  "version": "0.6.8",
  "packageManager": "pnpm@10.6.2",
  "description": "Manage monorepo common files.",
  "type": "module",
  "license": "MIT",
  "homepage": "https://github.com/sxzz/monoman#readme",
  "bugs": {
    "url": "https://github.com/sxzz/monoman/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sxzz/monoman.git"
  },
  "author": "三咲智子 Kevin Deng <sxzz@sxzz.moe>",
  "funding": "https://github.com/sponsors/sxzz",
  "files": [
    "dist"
  ],
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js"
    },
    "./package.json": "./package.json"
  },
  "bin": {
    "monoman": "./bin/monoman.js"
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "dev": "tsx src/dev.ts",
    "lint": "eslint .",
    "lint:fix": "pnpm run lint --fix",
    "build": "tsdown",
    "watch": "tsdown --watch",
    "typecheck": "tsc --noEmit",
    "release": "bumpp && pnpm publish",
    "prepublishOnly": "pnpm run build"
  },
  "dependencies": {
    "citty": "^0.1.6",
    "consola": "^3.4.0",
    "fast-glob": "^3.3.3",
    "js-yaml": "npm:@zkochan/js-yaml@0.0.7",
    "pnpm-multi-versions": "^0.4.2",
    "unconfig": "^7.3.1"
  },
  "devDependencies": {
    "@antfu/utils": "^9.1.0",
    "@pnpm/lockfile.types": "^1001.0.4",
    "@sxzz/eslint-config": "^6.0.2",
    "@sxzz/prettier-config": "^2.2.1",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^22.13.10",
    "bumpp": "^10.0.3",
    "eslint": "^9.22.0",
    "prettier": "^3.5.3",
    "tsdown": "^0.6.7",
    "tsx": "^4.19.3",
    "typescript": "^5.8.2"
  },
  "engines": {
    "node": ">=18.12.0"
  },
  "prettier": "@sxzz/prettier-config"
}
