{
  "name": "monoman",
  "version": "0.6.0",
  "packageManager": "pnpm@9.15.1",
  "description": "Manage monorepo common files.",
  "type": "module",
  "license": "MIT",
  "homepage": "https://github.com/sxzz/monoman#readme",
  "bugs": {
    "url": "https://github.com/sxzz/monoman/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sxzz/monoman.git"
  },
  "files": [
    "dist"
  ],
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js"
    },
    "./package.json": "./package.json"
  },
  "bin": {
    "monoman": "./bin/monoman.js"
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "dev": "tsx src/dev.ts",
    "lint": "eslint .",
    "lint:fix": "pnpm run lint --fix",
    "build": "tsdown",
    "watch": "tsdown --watch",
    "typecheck": "tsc --noEmit",
    "release": "bumpp && pnpm publish",
    "prepublishOnly": "pnpm run build"
  },
  "dependencies": {
    "@antfu/utils": "^8.0.0",
    "citty": "^0.1.6",
    "consola": "^3.3.2",
    "fast-glob": "^3.3.2",
    "js-yaml": "npm:@zkochan/js-yaml@0.0.7",
    "unconfig": "^0.6.0"
  },
  "devDependencies": {
    "@pnpm/lockfile.types": "^1001.0.0",
    "@sxzz/eslint-config": "^4.5.1",
    "@sxzz/prettier-config": "^2.0.2",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^22.10.2",
    "bumpp": "^9.9.2",
    "eslint": "^9.17.0",
    "prettier": "^3.4.2",
    "tsdown": "^0.5.2",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2"
  },
  "engines": {
    "node": ">=18.12.0"
  },
  "prettier": "@sxzz/prettier-config"
}
