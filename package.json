{
  "name": "monoman",
  "version": "0.7.3",
  "packageManager": "pnpm@10.18.1",
  "description": "Manage monorepo common files.",
  "type": "module",
  "license": "MIT",
  "homepage": "https://github.com/sxzz/monoman#readme",
  "bugs": {
    "url": "https://github.com/sxzz/monoman/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sxzz/monoman.git"
  },
  "author": "Kevin Deng <sxzz@sxzz.moe>",
  "funding": "https://github.com/sponsors/sxzz",
  "files": [
    "dist"
  ],
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": "./dist/index.js",
    "./package.json": "./package.json"
  },
  "bin": {
    "monoman": "./bin/monoman.js"
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "dev": "tsx src/dev.ts",
    "lint": "eslint .",
    "lint:fix": "pnpm run lint --fix",
    "build": "tsdown",
    "watch": "tsdown --watch",
    "typecheck": "tsc --noEmit",
    "release": "bumpp",
    "prepublishOnly": "pnpm run build"
  },
  "dependencies": {
    "citty": "^0.1.6",
    "consola": "^3.4.2",
    "fast-glob": "^3.3.3",
    "js-yaml": "npm:@zkochan/js-yaml@0.0.9",
    "pnpm-multi-versions": "^0.5.3",
    "unconfig": "^7.3.3"
  },
  "devDependencies": {
    "@antfu/utils": "^9.3.0",
    "@sxzz/eslint-config": "^7.2.7",
    "@sxzz/prettier-config": "^2.2.4",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^24.7.0",
    "bumpp": "^10.3.1",
    "eslint": "^9.37.0",
    "prettier": "^3.6.2",
    "tsdown": "^0.15.6",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3"
  },
  "engines": {
    "node": ">=20.19.0"
  },
  "prettier": "@sxzz/prettier-config"
}
