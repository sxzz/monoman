{
  "name": "monoman",
  "version": "0.4.2",
  "packageManager": "pnpm@8.10.4",
  "description": "Manage monorepo common files.",
  "license": "MIT",
  "homepage": "https://github.com/sxzz/monoman#readme",
  "bugs": {
    "url": "https://github.com/sxzz/monoman/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sxzz/monoman.git"
  },
  "files": [
    "dist"
  ],
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    "require": "./dist/index.js",
    "import": "./dist/index.mjs"
  },
  "bin": {
    "monoman": "./bin/monoman.mjs"
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "dev": "tsx src/dev.ts",
    "lint": "eslint .",
    "lint:fix": "pnpm run lint --fix",
    "build": "tsup",
    "watch": "tsup --watch",
    "release": "bumpp && pnpm publish",
    "prepublishOnly": "pnpm run build"
  },
  "dependencies": {
    "@antfu/utils": "^0.7.6",
    "citty": "^0.1.4",
    "consola": "^3.2.3",
    "fast-glob": "^3.3.2",
    "unconfig": "^0.3.11"
  },
  "devDependencies": {
    "@sxzz/eslint-config": "^3.7.4",
    "@sxzz/prettier-config": "^1.0.4",
    "@types/node": "^20.9.0",
    "bumpp": "^9.2.0",
    "eslint": "^8.53.0",
    "prettier": "^3.1.0",
    "tsup": "^7.2.0",
    "tsx": "^4.1.1",
    "typescript": "^5.2.2"
  },
  "engines": {
    "node": ">=16.14.0"
  },
  "prettier": "@sxzz/prettier-config"
}
