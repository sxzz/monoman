{
  "name": "monoman",
  "version": "0.4.2",
  "packageManager": "pnpm@8.15.6",
  "description": "Manage monorepo common files.",
  "type": "module",
  "license": "MIT",
  "homepage": "https://github.com/sxzz/monoman#readme",
  "bugs": {
    "url": "https://github.com/sxzz/monoman/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sxzz/monoman.git"
  },
  "files": [
    "dist"
  ],
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    "require": "./dist/index.cjs",
    "import": "./dist/index.js"
  },
  "bin": {
    "monoman": "./bin/monoman.js"
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "dev": "tsx src/dev.ts",
    "lint": "eslint .",
    "lint:fix": "pnpm run lint --fix",
    "build": "tsup",
    "watch": "tsup --watch",
    "release": "bumpp && pnpm publish",
    "prepublishOnly": "pnpm run build"
  },
  "dependencies": {
    "@antfu/utils": "^0.7.7",
    "citty": "^0.1.6",
    "consola": "^3.2.3",
    "fast-glob": "^3.3.2",
    "unconfig": "^0.3.12"
  },
  "devDependencies": {
    "@sxzz/eslint-config": "^3.9.0",
    "@sxzz/prettier-config": "^2.0.1",
    "@types/node": "^20.12.6",
    "bumpp": "^9.4.0",
    "eslint": "^9.0.0",
    "prettier": "^3.2.5",
    "tsup": "^8.0.2",
    "tsx": "^4.7.2",
    "typescript": "^5.4.4"
  },
  "engines": {
    "node": ">=18.12.0"
  },
  "prettier": "@sxzz/prettier-config"
}
