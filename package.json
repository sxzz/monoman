{
  "name": "monoman",
  "version": "0.5.2",
  "packageManager": "pnpm@9.9.0",
  "description": "Manage monorepo common files.",
  "type": "module",
  "license": "MIT",
  "homepage": "https://github.com/sxzz/monoman#readme",
  "bugs": {
    "url": "https://github.com/sxzz/monoman/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sxzz/monoman.git"
  },
  "files": [
    "dist"
  ],
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    "require": "./dist/index.cjs",
    "import": "./dist/index.js"
  },
  "bin": {
    "monoman": "./bin/monoman.js"
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "dev": "tsx src/dev.ts",
    "lint": "eslint .",
    "lint:fix": "pnpm run lint --fix",
    "build": "tsup",
    "watch": "tsup --watch",
    "release": "bumpp && pnpm publish",
    "prepublishOnly": "pnpm run build"
  },
  "dependencies": {
    "@antfu/utils": "^0.7.10",
    "citty": "^0.1.6",
    "consola": "^3.2.3",
    "fast-glob": "^3.3.2",
    "js-yaml": "npm:@zkochan/js-yaml@0.0.7",
    "unconfig": "^0.5.5"
  },
  "devDependencies": {
    "@pnpm/lockfile.types": "^1.0.2",
    "@sxzz/eslint-config": "^4.1.4",
    "@sxzz/prettier-config": "^2.0.2",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^20.16.5",
    "bumpp": "^9.5.2",
    "eslint": "^9.9.1",
    "prettier": "^3.3.3",
    "tsup": "^8.2.4",
    "tsx": "^4.19.0",
    "typescript": "^5.5.4"
  },
  "engines": {
    "node": ">=18.12.0"
  },
  "prettier": "@sxzz/prettier-config"
}
