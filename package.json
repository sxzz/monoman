{
  "name": "monoman",
  "version": "0.8.0",
  "packageManager": "pnpm@10.29.1",
  "description": "Manage monorepo common files.",
  "type": "module",
  "license": "MIT",
  "homepage": "https://github.com/sxzz/monoman#readme",
  "bugs": {
    "url": "https://github.com/sxzz/monoman/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sxzz/monoman.git"
  },
  "author": "Kevin Deng <sxzz@sxzz.moe>",
  "funding": "https://github.com/sponsors/sxzz",
  "files": [
    "dist"
  ],
  "main": "./dist/index.mjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.mts",
  "exports": {
    ".": "./dist/index.mjs",
    "./cli": "./dist/cli.mjs",
    "./presets": "./dist/presets.mjs",
    "./run": "./dist/run.mjs",
    "./package.json": "./package.json"
  },
  "typesVersions": {
    "*": {
      "*": [
        "./dist/*.d.mts",
        "./*"
      ]
    }
  },
  "bin": {
    "monoman": "./dist/run.mjs"
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "dev": "tsx src/dev.ts",
    "lint": "eslint .",
    "lint:fix": "pnpm run lint --fix",
    "build": "tsdown",
    "watch": "tsdown --watch",
    "typecheck": "tsc --noEmit",
    "release": "bumpp",
    "prepublishOnly": "pnpm run build"
  },
  "dependencies": {
    "cac": "^6.7.14",
    "consola": "^3.4.2",
    "js-yaml": "npm:@zkochan/js-yaml@0.0.10",
    "pnpm-multi-versions": "^0.6.0",
    "unconfig": "^7.4.2"
  },
  "devDependencies": {
    "@antfu/utils": "^9.3.0",
    "@sxzz/eslint-config": "^7.6.1",
    "@sxzz/prettier-config": "^2.3.1",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^24.10.12",
    "bumpp": "^10.4.1",
    "eslint": "^9.39.2",
    "prettier": "^3.8.1",
    "tsdown": "^0.20.3",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3"
  },
  "engines": {
    "node": ">=22.14.0"
  },
  "prettier": "@sxzz/prettier-config"
}
