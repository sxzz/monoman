{
  "name": "monoman",
  "version": "0.2.0",
  "packageManager": "pnpm@8.6.12",
  "description": "Monorepo manager.",
  "license": "MIT",
  "homepage": "https://github.com/sxzz/monoman#readme",
  "bugs": {
    "url": "https://github.com/sxzz/monoman/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sxzz/monoman.git"
  },
  "files": [
    "dist"
  ],
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    "types": {
      "require": "./dist/index.d.ts",
      "import": "./dist/index.d.mts"
    },
    "require": "./dist/index.js",
    "import": "./dist/index.mjs"
  },
  "bin": {
    "monoman": "./bin/monoman.mjs"
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "dev": "tsx src/run-cli.ts",
    "lint": "eslint .",
    "lint:fix": "pnpm run lint --fix",
    "build": "tsup",
    "release": "bumpp && pnpm publish",
    "prepublishOnly": "pnpm run build"
  },
  "dependencies": {
    "@antfu/utils": "^0.7.5",
    "fast-glob": "^3.3.1",
    "unconfig": "^0.3.10"
  },
  "devDependencies": {
    "@sxzz/eslint-config": "^3.4.0",
    "@sxzz/prettier-config": "^1.0.4",
    "@types/node": "^20.5.0",
    "bumpp": "^9.1.1",
    "eslint": "^8.47.0",
    "prettier": "^3.0.1",
    "tsup": "^7.2.0",
    "tsx": "^3.12.7",
    "typescript": "^5.1.6"
  },
  "engines": {
    "node": ">=14.19.0"
  },
  "prettier": "@sxzz/prettier-config"
}
